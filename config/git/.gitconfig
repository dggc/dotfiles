[user]
    name = Daniel Galinkin
    email = daniel.galinkin@hekima.com

[alias]
    ci = commit
    co = checkout
[color]
    ui = auto
[color "branch"]
    current = yellow
    local = magenta
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[apply]
    whitespace = nowarn
    #ignorewhitespace = true
[diff]
    rename = copy
[pager]
    color = true
[pack]
    threads = 2
[push]
    default = matching
[pull]
    rebase = true
[core]
    whitespace = -space-before-tab, -indent-with-non-tab, -trailing-space, -blank-at-eol, -blank-at-eof
    ignorewhitespace = change
    autocrlf = input
    eol = lf

[dude]
	interval = 60
